<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:scrollbars="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Create new facility"
                android:textColor="@color/black"
                android:textSize="23sp" />


            <EditText
                android:id="@+id/txtAddFacilityName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#EDEDED"
                android:hint="Facility Name"
                android:importantForAutofill="no"
                android:inputType="text" />


            <EditText
                android:id="@+id/txtAddFacilityCapacity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#EDEDED"
                android:hint="Capacity"
                android:importantForAutofill="no"
                android:inputType="number" />


            <EditText
                android:id="@+id/txtAddFacilityPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#EDEDED"
                android:hint="Price"
                android:importantForAutofill="no"
                android:inputType="number" />


            <Button
                android:id="@+id/btnAddFacility"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Create facility"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/btnAddGoBack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:background="@android:color/transparent"
                android:text="Go back"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>